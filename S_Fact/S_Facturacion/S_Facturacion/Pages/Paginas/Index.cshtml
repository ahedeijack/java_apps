@page
@model S_Facturacion.Pages.Paginas.IndexModel
@{
}

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Facturación.</h2>
    </div>
    <!-- Tabla -->
    <div class="col-12" style="text-align:center;">
        <br />
        <span class="h4 text-info">Agregar ticket.</span>
        <br /><br />
    </div>

    <div class="border container" style="padding:30px;">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="nuevoTicket.t_nEstacion">No. Estación.</label>
                </div>
                <div class="col-6">
                    <input asp-for="nuevoTicket.t_nEstacion" class="form-control" />
                </div>
                <span asp-validation-for="nuevoTicket.t_nEstacion" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="nuevoTicket.t_nFolio">No. Folio.</label>
                </div>
                <div class="col-6">
                    <input asp-for="nuevoTicket.t_nFolio" class="form-control" />
                </div>
                <span asp-validation-for="nuevoTicket.t_nFolio" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="nuevoTicket.t_nWebId">WebID.</label>
                </div>
                <div class="col-6">
                    <input asp-for="nuevoTicket.t_nWebId" class="form-control" />
                </div>
                <span asp-validation-for="nuevoTicket.t_nWebId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="nuevoTicket.t_fecha">Fecha.</label>
                </div>
                <div class="col-6">
                    <input asp-for="nuevoTicket.t_fecha" class="form-control" />
                </div>
                <span asp-validation-for="nuevoTicket.t_fecha" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="Agregar" class="btn btn-primary form-control" />
                </div>
            </div>
        </form>
    </div>

    <!-- Sin AJAX-->
    <div class="col-12 border p-3 mt-3">
        <div id="divImp">

            <form method="post">
                @if (Model.Ticket.Count() > 0)
                {
                    <table class="table table-striped border">
                        <tr class="table-secondary">
                            <th>
                                <!-- Uso de Código-->
                                <label asp-for="Ticket.FirstOrDefault().t_nEstacion">Estación</label>
                            </th>
                            <th>
                                <label asp-for="Ticket.FirstOrDefault().t_nFolio">Folio</label>
                                <!-- Uso de Referencias-->
                                @*Html.DisplayNameFor(m => m.Books.FirstOrDefault().Autor);*@
                            </th>
                            <th>
                                <label asp-for="Ticket.FirstOrDefault().t_nWebId">Web</label>
                            </th>
                            <th>
                                <label asp-for="Ticket.FirstOrDefault().t_fecha">Fecha</label>
                            </th>
                            <th>
                                <label>Opciones</label>
                            </th>
                            <th>

                            </th>
                        </tr>
                        @foreach (var item in Model.Ticket)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.t_nEstacion)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.t_nFolio)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.t_nWebId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.t_fecha)
                        </td>
                        <td>
                            <!-- Mandamos el controlador 'Delete', con el parametro de identificación de nuestro ojeto, en este caso 'id'  -->
                            <!-- respectivo parametro.  -->
                            <button asp-page-handler="Delete" asp-route-id="@item.id onclick="return confirm('¿Seguro que deseas eliminar el libro?')" class="btn btn-danger btn-sm">Borrar</button>
                        </td>
                    </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No hay Tickets
                disponibles.</p>
                }

            </form>

        </div>

    </div
><!-- Sin AJAX-->

    <div class="col-12 border p-3">

        <table id="data_tab" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Estacion</th>
                    <th>Folio</th>
                    <th>Web id</th>
                    <th>fecha</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/Fact.js"></script>
}