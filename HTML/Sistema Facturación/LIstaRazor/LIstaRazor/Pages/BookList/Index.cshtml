@page
@model LIstaRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Añadir nuevo libro.</a>
    </div>

    <!-- Agregamos funcion al botón para agregar libros. Esta información la tomamos de Index.cshtml.cs -->
    <!-- tomamos el modelo 'books'del metodo OnGet -->
    <div class="col-12 border p-3 mt-3" style="display:none;">
        <div id="divImp">

            <form method="post">
                @if (Model.Books.Count() > 0)
                {
                    <table class="table table-striped border">
                        <tr class="table-secondary">
                            <th>
                                <!-- Uso de Código-->
                                <label asp-for="Books.FirstOrDefault().Name"></label>
                            </th>
                            <th>
                                <label asp-for="Books.FirstOrDefault().Autor"></label>
                                <!-- Uso de Referencias-->
                                @*Html.DisplayNameFor(m => m.Books.FirstOrDefault().Autor);*@
                            </th>
                            <th>
                                <label asp-for="Books.FirstOrDefault().ISBN"></label>
                            </th>
                            <th>

                            </th>
                        </tr>
                        @foreach (var item in Model.Books)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Autor)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.ISBN)
                                </td>
                                <td>
                                    <!-- Mandamos el controlador 'Delete', con el parametro de identificación de nuestro ojeto, en este caso 'id'  -->
                                    <!-- respectivo parametro.  -->
                                    <button asp-page-handler="Delete" asp-route-id="@item.id" onclick="return confirm('¿Seguro que deseas eliminar el libro?')" class="btn btn-danger btn-sm">Borrar</button>
                                    <!-- Con asp-page nos redirigimos a la pagina que deseamos, en este caso 'Edit'. Mandamos con  -->
                                    <!-- asp-route el parametro con el que identificaremos el objeto, en este caso, 'id', y el objeto con su-->
                                    <!-- respectivo parametro.  -->
                                    <a asp-page="Edit" asp-route-id="@item.id" class="btn btn-success btn-sm text-white">Editar</a>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No hay libros disponibles.</p>
                }

            </form>

        </div>
        
    </div>

    <!--
    Segunda manera de mostrar utilizando ajax.
    -->

    <div class="col.12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>

    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    <input type="button" onclick="printDiv('divImp')" value="imprimir div" />


    @section Scripts{
        <script src="~/js/bookList.js"></script>
    }

</div>

